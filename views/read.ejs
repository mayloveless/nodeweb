    }
    .pcanvas{
        position:absolute;
        top:0;
        left:0;
        z-index:-1;
    }

    #draw{
        position:absolute;
        left:295px;
    }
    #pen_sample{
        display: block;
        width: 80px;
        height: 3px;
        background: #000;
        border-radius: 20px;
    }
    #canvas_colors{
        position:absolute;
        top:30px;
        background:#eee;
        display:none;
        width: 120px;
        left:60px;
    }
    #canvas_currentColor{
        width:20px;
        height:20px;
        background-color:#000;
        display:block;
    }
    #canvas_colors li{
        width:20px;
        height:20px;
        float:left;
        margin:10px;
        display:block;
        overflow: hidden;
    }
    #canvas_colors li a{
        background:#000;
        display:block;
        width:100%;
        height:100%;
        text-indent:99px;
    }
    #canvas_colors .yellow{
        background-color:#ffc40d;
    }
    #canvas_colors .green{
        background-color:green;
    }
    #canvas_colors .red{
        background-color:red;
    }
   #canvas_colors .purple{
        background-color:#7a43b6;
    }
    #canvas_colors .grayLight{
        background-color:#999;
    }
    #canvas_colors .blue{
        background-color:#049cdb;
    }

  #canvas_colors .white{
        background-color:#fff;
    }
    #canvas_colors .black{
        background-color:#000;
    }
    #canvas_colors .red{
        background-color:red;
    }
    #canvas_colors .errorBackground{
        background-color:#f2dede;
    }

    :-webkit-full-screen{
        width: 100%;
    }
    :-moz-full-screen {
        width: 100%;
        background: #fff;
    }
    :-moz-full-screen #tool {
        display: none;
    }
    :-webkit-full-screen #tool {
        display: none;
    }

    #chat{
        position:fixed;
        right:20px;
        bottom:100px;
        width:300px;
        height:200px;
        
    }
    #chatWin{
        width:100%;
        height:100%;
        background-color:#c09853;
        margin:0;
        list-style:none;
        margin:0;
        padding:0;
        word-wrap:break-word;
        white-space:pre-line;
        overflow-y:scroll;
        font-size:14px;
    }
     #chat h3{
        background: #1d88b4;
        color:#fff;
        padding:10px;
    }
    #tool{
        list-style:none;
        background:#fff;
        width:150px;
        margin-left:0;
    }
    #tool h3{
        background: #1d88b4;
        color:#fff;
        padding:10px;
        text-align:center;
    }
    #tool li{
        color:#000;
        line-height:40px;
        height:40px
        font-size:24px;
        border-bottom:1px solid #999;
        text-align:center;
    }
    .cata_nav li a,.cata_nav .nav-header{
        color:#000;
        line-height:40px;
        height:40px
        font-size:24px;
    }
  
    .nav-pills > li > a:hover{
        color:#000;
        border-radius:0px;
    }
    .nav-pills.nav-stacked > li > a{
        margin:0;
    }
    .page .curPageNum{
        float:right;
        margin:5px;
        font-size:18px;
    }
    .page .title{
        margin:5px;
        font-size:18px;
    }
    .showTheirs{
        display:block;
    }
    .mine{
        margin-top:10px;
    }
</style>

