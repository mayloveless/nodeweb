<style>
	#catalogue{
		border: 1px solid #000;
        display: none;
        position: absolute;
        background: #eee;
        right: 100px;
        width: 200px;
	}
    .cataList{
        float: left;
        width: 100%;
        display: block;
    }
	#content{
		width: 600px;
		overflow: hidden;
        margin: 0 auto;
        height: 100%;
	}
    #tool{
        position: fixed;
        top:120px;
    }
	.pone{
		margin: 0;
		line-height: 20px;
        position:relative;
        padding:10px;
	}
    #pageWrap{
        height: 100%;
        position: relative;
        left: 0;
        top:0;
    }
    .page{
        width: 600px;
        float: left;
    }

    .psignal{
        background: #00b0f0;
        font-size: 18px;
        width: 20px;
        height: 20px;
        color: #fff!important;
        display: block;
        float: left;
        margin-right: 10px;
        cursor: pointer;
    }
    .theirs{
        display: none;
    }

    #drawPannel{
        position:fixed;
        right:100px;
        top:100px;
        display:none;
    }
    .pcanvas{
        position:absolute;
        top:0;
        left:0;
        z-index:-1;
    }

    #draw{
        position:absolute;
        left:300px;
    }
    #pen_sample{
        display: block;
        width: 80px;
        height: 3px;
        background: #000;
        border-radius: 20px;
    }
    #canvas_colors{
        display:none;
    }
    #canvas_currentColor{
        width:20px;
        height:20px;
        background-color:#000;
        display:block;
    }
    #canvas_colors li{
        width:20px;
        height:20px;
        float:left;
        margin-left:10px;
        display:block;
    }
    #canvas_colors li a{
        background:#000;
        display:block;
        width:100%;
        height:100%;
    }
    #canvas_colors .yellow{
        background-color:yellow;
    }
    #canvas_colors .green{
        background-color:green;
    }
    #canvas_colors .red{
        background-color:red;
    }

    :-webkit-full-screen{
        width: 100%;
    }
    :-moz-full-screen {
        width: 100%;
        background: #fff;
    }
    :-moz-full-screen #tool {
        display: none;
    }
    :-webkit-full-screen #tool {
        display: none;
    }

</style>

<a id="draw" href="javascript:;">涂鸦</a>
