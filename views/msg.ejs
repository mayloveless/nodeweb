<style>
	.table tbody tr.info > td {
	  background-color: #d9edf7;
	}
</style>
<h1>我的提醒 </h1>

<table class="table span8">
	<thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
	<tbody>
	<% for(var i=0; i<msg.length; i++) {%>
		<%if(msg[i].status===1){%>
			<tr >
				<td><%= msg[i].content%><a target="blank" href="<%= msg[i].url%>"><%= msg[i].urlTitle%></a></td>
				<td>已读</td>
			</tr>
		<% } else {%>
			<tr  class="info unread" mid ="<%=msg[i]._id%>">	
				<td><%= msg[i].content%><a class="url" mid ="<%=msg[i]._id%>" target="blank" href="javascript:;" adress="<%= msg[i].url%>"><%= msg[i].urlTitle%></a></td>
				<td>未读</td>
			</tr>
		<% } %>
	<% } %>
	</tbody>
</table>


<div class="modal hide fade" id="error">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>提示</h3>
  </div>
  <div class="modal-body">
    <p>状态更新出错，请重新操作</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">确定</a>
  </div>
</div>

<script>
	var read = function(mid,address){
		$.post('/readMsg',{'mid':mid},function(req, res){
			if(res !=='success'){
				$('#error').show();
			}else{
				location.href=address;
			}
			
		});
	};
	$(document).ready(function(){
		$('.unread').bind('click',function(){
			var mid = $(this).attr('mid');
			var adress = location.href;
			read(mid,adress);
		});

		$('.url').bind('click',function(event){
			event.preventDefault()
			event.stopPropagation(); 
			var mid = $(this).attr('mid');
			var adress = $(this).attr('adress');
			read(mid,adress);
		});
	});
</script>