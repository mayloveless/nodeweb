<form class="form-horizontal" method="post" enctype="multipart/form-data" action="/creat">
  <fieldset>
    <legend>制作书籍</legend>
    <div class="control-group">
      <label class="control-label" for="bookName">名称</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="bookName" name="bookName" placeholder="名称">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="cata">分类</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="cata" name="cata" placeholder="分类">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="index">添加目录项</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="index" name="index" placeholder="目录项">
        <a href="javascript:;" id="more" class="btn">继续添加</a>
      </div>
    </div>

    <div class="control-group" id="firlGroup">
      <label class="control-label" for="password-repeat">上传文件:支持txt格式</label>
      <div class="controls">
        <input type="file" class="input-xlarge" id="file" name="file">
      </div>
    </div>
     <div class="form-actions">
    	<button type="submit" class="btn">提交</button>
    </div>
  </fieldset>
</form>

<script>
	var num = 0;
	var html = '<div class="control-group">'+
      '<label class="control-label" for="index">添加目录项</label>'+
      '<div class="controls">'+
        '<input type="text" class="input-xlarge" id="index" name="index" placeholder="目录项">'+
      '</div>'+
     '</div>';
	$('#more').bind('click',function  () {
		num ++;
		$('#firlGroup').before(html.replace(/index/ig,'index'+num));
	});
</script>