
<style>
	.bookList{
		list-style:none;

	}
	.bookList li{
		width:250px;
		border:1px solid ;
		float:left;
		margin-left:20px;
		margin-top:20px;
		position:relative;
		border-radius:5px;
	}
	.bookList img{
		width:100%;
		margin:0 auto;
	}
	.bookList .title{
		width:100%;
		display:block;
		text-align:center;
		background:#1d88b4;
		color:#fff;
		height:50px;
		line-height:50px;
		font-size:18px;
	}
	.bookList .cata{
		position:absolute;
		bottom:70px;
		right:0;
		display:block;
		width:170px;
		background:#000;
		opacity:0.8;
		height:40px;
		line-height:40px;
		text-align:center;
		font-size:20px;
		color:#fff;
	}
	.cata_nav{
		background:#fff;
	}
	.cata_nav li:hover{
		background:#eee;
	}
</style>
<ul class="cata_nav nav nav-pills nav-stacked span2">
  <li class="nav-header">书籍分类</li>
  <% if(curCata === 'all'){%>
  	<li class="active"><a href="/cata/all">全部书籍</a></li>
  <% }else {%>
  	<li><a href="/cata/all">全部书籍</a></li>
  <% }%>
<% for(var i=0; i<cata.length; i++) {%>
	<% if(curCata === cata[i].cname){%>
		<li class="active"><a href="/cata/<%= cata[i].cname %>"><%= cata[i].cname %></a></li>
	<% }else {%>
	  	<li><a href="/cata/<%= cata[i].cname %>"><%= cata[i].cname %></a></li>
	  <% }%>
<% } %>
</ul>

<div class="span8">
	<form action="/book/search" method="get" class="form-inline ">
		<input type="text" name="key" placeholder="内容及标题" class="input-large"/>
		<button type="submit" class="btn btn-danger">搜索</button>
	</form>
</div>

<% if(books.length){ %>
	<div class="alert alert-info span8">共<%= books.length %>条记录</div>
<% }else { %>
	<div class="alert alert-info span8">非常抱歉，没有结果</div>
<% } %>


<ul class="span8 bookList">
<% for(var i=0; i<books.length; i++) {%>
   <li>
   		<a href="/book/<%= books[i]._id %>"><img src="<%= books[i].cover %>"/></a>
   		<a href="/book/<%= books[i]._id %>" class="title"><%= books[i].bookName %></a>
   		<span class="cata"><%= books[i].cata %></span>
   </li>
<% } %>
</ul>
