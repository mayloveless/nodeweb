<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title><%= title %> - ReadIn</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="/javascripts/html5.js" type='text/javascript'></script>
	<![endif]-->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/javascripts/socket.io.js"></script>
  </head>
  <body>
  
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">ReadIn</a>
          <div class="nav-collapse">
            <ul class="nav">
              <% if (curPage == 'index') {%>
                <li class="active"><a href="/">首页</a></li>
              <% } else { %>
                <li ><a href="/">首页</a></li>
              <% } %>
              <% if (!user) { %>
                <% if (curPage == 'login') {%>
                  <li class="active" ><a href="/login">登录</a></li>
                <% } else { %>
                  <li ><a href="/login">登录</a></li>
                <% } %>
                <% if (curPage == 'reg') {%>
                  <li class="active" ><a href="/reg">注册</a></li>
                <% } else { %>
                  <li ><a href="/reg">注册</a></li>
                <% } %>
              <% } else { %>
                <li><a href='javascript:;'>欢迎您,<%= user.name%></a></li>
                
               <% if (curPage == 'create') {%>
                  <li class="active" ><a href="/create">制作</a></li>
                <% } else { %>
                  <li><a href="/create">制作</a></li>
                <% } %>
                 <% if (curPage == 'msg') {%>
                  <li class="active" ><a href="/msg">提醒<span id="msgNum"></span></a></li>
                <% } else { %>
                 <li><a href="/msg">提醒<span id="msgNum"></span></a></li>
                <% } %>
                
                <% if (user.admin) {%>
                  <li ><a href="/admin">管理</a></li>
                <% }  %>
                <li class="btn-group">
                  <a class="dropdown" data-toggle="dropdown" href="#">
                    设置
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/user/<%= user.id%>">个人主页</a></li>
                    <li><a href="/setting">个人设置</a></li>
                    <li><a href="/logout">退出</a></li>
                  </ul>
                </li>
                
              <% } %>

            </ul>
          </div>
        </div>
      </div>
    </div>

    <div id="container" class="container">
      <% if (success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      <%- body %>
      
      <footer style="clear:both">
        <hr />
        <p style="text-align:center"><a href="http://weibo.com/mayloveless">@mayloveless</a> 2013</p>
      </footer>
    </div>
  </body>
</html>

<style>
  #msgNum{
    color: yellow;
  }
</style>
<script>
      $(document).ready(function(){
        //connect socket
        var socket = io.connect('http://127.0.0.1:3000/');
        //listen channel msg / unread
        socket.on('msg', function (data) {
          var num = parseInt($('#msgNum').text()) ? parseInt($('#msgNum').text()) + data.num : 1;
          $('#msgNum').text(num);
        });
        socket.on('unread', function (data) {
          $('#msgNum').text(data.num);
        });

      }); 
</script>