<style>
	.bookList{
		list-style:none;

	}
	.bookList li{
		width:250px;
		border:1px solid ;
		float:left;
		margin-left:20px;
		margin-top:20px;
		position:relative;
		border-radius:5px;
	}
	.bookList img{
		width:100%;
		margin:0 auto;
	}
	.bookList .title{
		width:100%;
		display:block;
		text-align:center;
		background:#1d88b4;
		color:#fff;
		height:50px;
		line-height:50px;
		font-size:18px;
	}
	.bookList .cata{
		position:absolute;
		bottom:70px;
		right:0;
		display:block;
		width:170px;
		background:#000;
		opacity:0.8;
		height:40px;
		line-height:40px;
		text-align:center;
		font-size:20px;
		color:#fff;
	}

</style>
<div class="span10">
  <form action="/book/search" method="get" class="form-inline ">
    <input type="text" name="key" placeholder="内容及标题" class="input-large"/>
    <button type="submit" class="btn btn-danger">搜索</button>
  </form>
</div>

<% if(books.length){ %>
	<div class="alert alert-info span10">共搜索到<%= books.length %>条记录</div>
<% }else { %>
	<div class="alert alert-info span10">非常抱歉，没有结果</div>
<% } %>


<ul class="span10 bookList">
<% for(var i=0; i<books.length; i++) {%>
   <li>
   		<a href="/book/<%= books[i]._id %>"><img src="<%= books[i].cover %>"/></a>
   		<a href="/book/<%= books[i]._id %>" class="title"><%= books[i].bookName %></a>
   		<span class="cata"><%= books[i].cata %></span>
   </li>
<% } %>
</ul>
