 <style>
   .form-horizontal{
    width:500px;
    margin:0 auto;
    background:#55beff;
    padding:20px;
    border-radius:10px;
  }
  .form-horizontal .form-actions{
    background:none;
    padding-left:350px;
  }
  legend,label{
    color:#fff;
  }
 </style>
<h1><%= title%></h1>

<form class="form-horizontal" method="post"  action="/editSalon">
  <fieldset>
    <legend>修改《<%= book.bookName%>》的书评：</legend>
    <input type="hidden" value="<%=book._id%>" name="bookid" />
    <input type="hidden" value="<%=salon.sid%>" name="sid" />
    <input type="hidden" value="<%=salon.time%>" name="time" />
    <input type="hidden" value="<%=salon.like%>" name="like" />
    <input type="hidden" value="<%=salon.comment%>" name="comment" />
    <div class="control-group">
      <label class="control-label" for="salonTitle">名称</label>
      <div class="controls">
        <input type="text" value="<%= salon.title %>" class="input-xlarge" id="salonTitle" name="salonTitle" placeholder="标题">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="salonContent">内容</label>
      <div class="controls">
        <textarea type="text" style="min-height:300px;"  class="input-xlarge" id="salonContent" name="salonContent" placeholder="内容"><%= salon.content %></textarea>
      </div>
    </div>
     <div class="form-actions">
    	<button type="submit" class="btn">提交</button>
    </div>
  </fieldset>
</form>